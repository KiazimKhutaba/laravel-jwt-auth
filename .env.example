# Example .env Configuration

# Application
APP_NAME=Laravel
APP_URL=http://localhost

# JWT Configuration
JWT_SECRET=your-very-long-secret-key-at-least-32-characters-long
JWT_ALGO=HS256
JWT_ACCESS_TTL=60
JWT_REFRESH_TTL=43200

# Refresh token delivery: 'cookie' or 'body'
JWT_REFRESH_METHOD=cookie

# Authenticated user type: 'dto' or 'model'
JWT_AUTH_USER_TYPE=dto

# User model (optional)
JWT_USER_MODEL=App\Models\User

# Mail Configuration (for email verification)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"
